{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite dev",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "lock": false,
  "nodeModulesDir": "auto",
  "lint": {
    "include": ["src/"],
    "exclude": ["build/", ".svelte-kit/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "ban-unused-ignore",
        "default-param-last"
      ]
    }
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["build/", ".svelte-kit/"],
    "indentWidth": 2,
    "lineWidth": 90,
    "semiColons": false,
    "singleQuote": true
  },
  "unstable": ["fmt-component"]
}
